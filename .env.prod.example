# Production Environment Configuration Template
# Copy this file to .env.prod and configure with SECURE production values
# ВАЖНО: Замените все placeholder значения на реальные!

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT=production

# ============================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================
POSTGRES_DB=onboarding_bot
POSTGRES_USER=user
# ОБЯЗАТЕЛЬНО: Замените на надежный пароль (минимум 20 символов)
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD_MIN_20_CHARS

# Эта переменная используется приложением для подключения к БД
# ВАЖНО: Пароль должен совпадать с POSTGRES_PASSWORD
DATABASE_URL=postgresql+asyncpg://user:REPLACE_WITH_SECURE_PASSWORD_MIN_20_CHARS@postgres:5432/onboarding_bot
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# ============================================================
# REDIS CONFIGURATION
# ============================================================
# ОБЯЗАТЕЛЬНО: Замените на надежный пароль
REDIS_PASSWORD=REPLACE_WITH_REDIS_SECURE_PASSWORD

# Эта переменная используется приложением для подключения к Redis
# ВАЖНО: Пароль должен совпадать с REDIS_PASSWORD
REDIS_URL=redis://:REPLACE_WITH_REDIS_SECURE_PASSWORD@redis:6379/0
REDIS_MAX_CONNECTIONS=20

# ============================================================
# QDRANT CONFIGURATION (Vector Database)
# ============================================================
QDRANT_URL=http://qdrant:6333
# Опционально: API ключ для защиты Qdrant (рекомендуется для production)
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=onboarding_documents

# ============================================================
# OPENAI CONFIGURATION
# ============================================================
# ОБЯЗАТЕЛЬНО: Получите ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-REPLACE_WITH_YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================
# LANGSMITH CONFIGURATION (Optional - for LLM monitoring)
# ============================================================
# Получите ключ на https://smith.langchain.com
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=REPLACE_WITH_LANGCHAIN_API_KEY_OR_LEAVE_EMPTY
LANGCHAIN_PROJECT=ai_docs_bot_production

# ============================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================
# ОБЯЗАТЕЛЬНО: Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=REPLACE_WITH_YOUR_TELEGRAM_BOT_TOKEN

# ============================================================
# FASTAPI CONFIGURATION
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_DEBUG=false

# ============================================================
# SECURITY
# ============================================================
# ОБЯЗАТЕЛЬНО: Сгенерируйте надежный ключ (минимум 32 символа)
# Команда для генерации: openssl rand -hex 32
SECRET_KEY=REPLACE_WITH_SECURE_SECRET_KEY_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================
# FILE UPLOAD
# ============================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,txt,md

# ============================================================
# MULTILINGUAL SUPPORT
# ============================================================
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,en,ar

# ============================================================
# CACHE CONFIGURATION
# ============================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================================
# MONITORING (Optional but recommended)
# ============================================================
# Sentry для отслеживания ошибок - https://sentry.io
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN_OR_LEAVE_EMPTY

# Prometheus метрики
PROMETHEUS_PORT=9090
